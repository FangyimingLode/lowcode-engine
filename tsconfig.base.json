{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@lowcode-engine/default-generator": [
        "packages/default-generator/src/index.ts"
      ],
      "@lowcode-engine/model": ["packages/model/src/index.ts"],
      "@lowcode-engine/monaco-editor": ["packages/monaco-editor/src/index.ts"],
      "@lowcode-engine/simulator": ["packages/simulator/src/index.ts"],
      "@lowcode-engine/types": ["packages/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
